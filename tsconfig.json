{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "typeRoots": ["@types"],
    "allowJs": true
  },
  "include": ["/**/*.ts", "/**/*.js"],
  "exclude": ["node_modules", "@types"]
}
